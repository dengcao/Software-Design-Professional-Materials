<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@include file="/common/public.jsp" %>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>食品列表</title>
	<script type="text/javascript" src="${ctx}/js/page.js"></script>
	<script type="text/javascript" src="${ctx}/js/search.js"></script>
	<script type="text/javascript">
		$(document).ready(function(){
			getPartList();
			exportTable();
			//搜索
			$("#find").click(function(){
				var condition=$("#condition").val();
				var url2="${ctx}/food/getFList?condition="+condition;
				if(condition==""){
					getPartList();
				}else{
					search.cseatch(url2);
				}
			});

		});
	</script>

	<script type="text/javascript">
		function getPartList(){
			var url="${ctx}/food/getLimitList";
			var count=$("#count").val();
			page.pagePart(url,count);
		}
		function   customPage(obj){
			$("#table tr:gt(1)").remove();
			for(var i=0;i<obj.length;i++){
				var newRow = "<tr>" +
						"<td>"+obj[i].foodId+"</td><td>"+obj[i].foodName+"</td>" +
						"<td>"+obj[i].className+"</td><td>"+obj[i].foodStandard+"</td>" +
						"<td>"+obj[i].remarks+"</td>" + "<td>";
				if(window.userPower==0||window.userPower==11){
					newRow=newRow+"<a href='${ctx}/food/editFood?id="+obj[i].foodId+"'>修改&nbsp;&nbsp;</a>"+
					"<a href='${ctx}/food/delete?id="+obj[i].foodId+"'>删除</a>"+"</td></tr>";
				}else{
					$("#add").hide();
				}

				$("#table tr:last").after(newRow);

			}

		}
	</script>


</head>

<body>
<input type="hidden" id="count" value="${count}">
<div class="pagin">
	<br/>
	<a id="add" href="${ctx }/food/add">新添食品</a>
	<br/>   <br/>
	<input type="text" id="condition" placeholder="请输入ID、名称或分类"><button id="find">搜索</button>
	<button id="export">导出</button>
	<br/><br/>
	<table id="table" class="t1">
		<tr ><th colspan="6">食品列表</th></tr>
		<tr>
			<td>食品ID</td>
			<td>食品名称</td>
			<td>分类</td>
			<td>单位</td>
			<td>备注</td>
			<td>操作</td>
		</tr>
	</table>
	<br/>
	<div id="Pagination" class="pagination"
		 style=" width: -moz-fit-content;width:-webkit-fit-content;width: fit-content;margin-left: auto;margin-right: auto;" ></div>
</div>
</body>
</html>